<Window x:Class="WpfMvvmTree.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:wpfmvvmtree="clr-namespace:WpfMvvmTree"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <wpfmvvmtree:ViewModel/>
    </Window.DataContext>
    <Grid>
        <TreeView ItemsSource="{Binding View}">
            <TreeView.Resources>
                <HierarchicalDataTemplate
                    DataType="{x:Type wpfmvvmtree:ItemModel}" 
                    ItemsSource="{Binding Children}">
                    <TextBlock Text="{Binding Name}"/>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>
    </Grid>
</Window>

    